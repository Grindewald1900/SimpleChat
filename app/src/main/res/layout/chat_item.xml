<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_60">
    <com.kproduce.roundcorners.CircleImageView
        android:id="@+id/chat_img"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginLeft="@dimen/dimen_20"
        android:src="@drawable/photo1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/chat_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Harry potter"
        android:layout_marginLeft="@dimen/dimen_20"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chat_time"
        app:layout_constraintLeft_toRightOf="@id/chat_img"
        app:layout_constraintRight_toLeftOf="@id/chat_img2"
        />
    <TextView
        android:id="@+id/chat_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Harry potter"
        android:layout_marginLeft="@dimen/dimen_20"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/chat_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/chat_img"
        app:layout_constraintRight_toLeftOf="@id/chat_img2"
        />

    <com.kproduce.roundcorners.CircleImageView
        android:id="@+id/chat_img2"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_20"
        android:src="@drawable/photo1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
