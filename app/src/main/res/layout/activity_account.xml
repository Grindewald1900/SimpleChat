<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AccountActivity">

    <ImageView
        android:id="@+id/iv_profile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/dimen_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo1" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/bt_acc_name"
        android:layout_width="@dimen/dimen_240"
        android:layout_height="@dimen/dimen_50"
        android:text="username"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/qmui_config_color_white"
        android:layout_marginTop="@dimen/dimen_40"
        app:qmui_borderColor="@color/colorPrimary"
        app:qmui_backgroundColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/iv_profile_picture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/bt_acc_quit"
        android:layout_width="@dimen/dimen_240"
        android:layout_height="@dimen/dimen_50"
        android:text="Log out"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/qmui_config_color_white"
        android:layout_marginTop="@dimen/dimen_40"
        app:qmui_borderColor="@color/colorPrimary"
        app:qmui_backgroundColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/bt_acc_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
