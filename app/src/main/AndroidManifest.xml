<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.simplechat">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pic_chat"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pic_chat"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.LoginActivity"></activity>
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.AccountActivity" />
        <activity
            android:name=".tool.SignHelper"
            android:theme="@style/LaunchTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.SelectionActivity" />
        <activity android:name=".ui.ChatActivity" />
        <activity android:name=".ui.MainActivity" />
    </application>

</manifest>